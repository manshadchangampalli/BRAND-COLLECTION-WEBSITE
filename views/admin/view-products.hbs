<section>
    <div class="container">
        <div class="row">
            <a class="btn btn-outline-success m-3 ml-auto" href="/admin/add-product">Add Product</a>
        </div>
        <table class="table">
  <thead>
    <tr>
      <th scope="col">no</th>
      <th scope="col">name</th>
      <th scope="col">category</th>
      <th scope="col">price</th>
      <th scope="col">image</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.Name}} </td>
      <td>{{this.Category}}</td>
      <td>{{this.Price}}</td>
      <td><img style="width: 50px; height: 50px;" src='/product-images/{{this._id}}.jpg' alt=""></td>
      <td><a class="btn btn-primary" href="/admin/edit-product">EDIT</a>
      <a class="btn btn-danger" href="/admin/delete-product/{{this._id}}" onclick="return confirm('Are you want to delete {{this.Name}}')">DELETE</a>
      </td>
    </tr>
    {{/each}}
   
  </tbody>
</table>
    </div>
</section>